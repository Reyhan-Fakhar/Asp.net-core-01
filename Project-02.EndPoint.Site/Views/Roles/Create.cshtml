@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Project_02.Domain.Models.Permissions
@model Project_02.Domain.ViewModels.RoleRequestViewModel
@{
    ViewData["Title"] = "افزودن نقش";
    var permissions = ViewBag.Permissions as List<Permission>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نقش جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان نقش</label>
                        <input type="text" asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            دسترسی‌های نقش
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                        <ul>
                            @if (permissions != null)
                            {
                                foreach (var permission in permissions.Where(p => p.ParentId == null))
                                {
                                    <li>
                                            <input type="checkbox" name="selectedPermissions" value="@permission.PermissionId" /> @permission.PermissionTitle

                                        @if (permissions.Any(p => p.ParentId == permission.PermissionId))
                                        {
                                            <ul>
                                                @foreach (var sub in permissions.Where(p => p.ParentId == permission.PermissionId))
                                                {
                                                    <li>
                                                            <input type="checkbox" name="selectedPermissions" value="@sub.PermissionId" /> @sub.PermissionTitle
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                        <!-- /.panel-body -->
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>


@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Project_02.Domain.Models.Permissions
@model Project_02.Domain.ViewModels.RoleCreateRequestViewModel

@section MyStyles
{
    <link href="~/dark-rtl/assets/plugins/treeview/themes/default/style.css" rel="stylesheet">
}
@{
    ViewData["Title"] = "افزودن نقش";
    var permissions = ViewBag.Permissions as List<Permission>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نقش جدید</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>عنوان نقش</label>
                <input type="text" asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    دسترسی‌های نقش
                </div>
                <div class="panel-body">
                    <div id="jstree-checkbox" class="panel-body">
                        <ul>
                            @if (permissions != null)
                            {
                                foreach (var permission in permissions.Where(p => p.ParentId == null))
                                {
                                    <li>
                                        <input type="checkbox" name="selectedPermissions" value="@permission.PermissionId" /> @permission.PermissionTitle

                                        @if (permissions.Any(p => p.ParentId == permission.PermissionId))
                                        {
                                            <ul>
                                                @foreach (var sub in permissions.Where(p => p.ParentId == permission.PermissionId))
                                                {
                                                    <li>
                                                        <input type="checkbox" name="selectedPermissions" value="@sub.PermissionId" /> @sub.PermissionTitle
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary waves-effect waves-light">ذخیره اطلاعات</button>
                <button asp-action="Index" class="btn btn-danger waves-light">بازگشت به لیست </button>
            </div>
        </form>
    </div>
</div>

@section MyScripts
{
    <script src="~/dark-rtl/assets/plugins/treeview/jstree.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#permissionTree').jstree({
                "checkbox": {
                    "keep_selected_style": false,
                    "three_state": false,  // disables cascading selection
                    "cascade": ""
                },
                "plugins": ["checkbox"]
            });

            // در صورت نیاز به جمع‌آوری داده‌ها برای ارسال به سرور
            $('#saveButton').on('click', function () {
                var selectedPermissions = $('#permissionTree').jstree("get_selected", true).map(function   (node) {
                    return node.id;
                });
                console.log(selectedPermissions); // ارسال به سرور یا استفاده از داده‌ها
            });
        });
    </script>

}
